{
  "Serilog": {
    "Using": [
      "Serilog",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Elasticsearch",
      "Serilog.Enrichers.CorrelationId"
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithCorrelationId",
      "WithCorrelationIdHeader"
    ],
    "Properties": {
      "ApplicationName": "Hangman",
      "Environment": "Local"
    },
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "connectionGlobalHeaders": "Authorization=Basic ZWxhc3RpYzplbGFzdGlj",
          "indexFormat": "logstash-marketplace-{0:yyyy.MM.dd}",
          "BatchPostingLimit": 50,
          "ConnectionTimeout": 5,
          "MinimumLogEventLevel": "Information",
          "customFormatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DBConnection": "Host=localhost;Port=5432;Username=hangman;Password=hangman;Database=hangman;"
  },
  "AllowedHosts": "*"
}